{
  "name": "vtavernier.github.io",
  "description": "Source repository for my blog.",
  "version": "1.0.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "build:podman": "podman build -t localhost/vtavernier.github.io .github/actions/build-pages && podman run --rm -it -e BUILD_ONLY=true -v $PWD:/src:z -w /src localhost/vtavernier.github.io",
    "build:podman-full": "podman build -t localhost/vtavernier.github.io .github/actions/build-pages && podman run --rm -it -v $PWD:/src:z -w /src localhost/vtavernier.github.io",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier -w .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .js,.ts,.astro",
    "subfont": "subfont -ir --no-fallbacks --silent --root dist",
    "ci:check": "run-s format:check lint",
    "postinstall": "sed -i \"s#src = src.substring(config.base.length - 1);#src = src.substring(config.base.length - +config.base.endsWith('/'));#\" node_modules/@astrojs/image/dist/build/ssg.js"
  },
  "devDependencies": {
    "@astrojs/image": "^0.14.1",
    "@astrojs/mdx": "^2.0.0",
    "@astrojs/rss": "^4.0.0",
    "@astrojs/sitemap": "^3.0.0",
    "@astrojs/tailwind": "^5.0.0",
    "@astrolib/seo": "^0.3.0",
    "@fontsource/inter": "^5.0.0",
    "@tailwindcss/typography": "^0.5.9",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "astro": "^4.0.0",
    "astro-compress": "^2.0.15",
    "astro-icon": "^1.0.0",
    "eslint": "^8.33.0",
    "eslint-plugin-astro": "^0.23.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "limax": "4.1.0",
    "mdast-util-to-string": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "prettier-plugin-astro": "^0.8.0",
    "reading-time": "^1.5.0",
    "rehype-katex": "^7.0.0",
    "remark-math": "^6.0.0",
    "sharp": "^0.31.3",
    "subfont": "^7.0.0",
    "svgo": "3.2.0",
    "tailwindcss": "^3.2.6",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.12.0"
  },
  "dependencies": {
    "astro-m2dx": "^0.7.15",
    "jsonresume-theme-stackoverflow": "^2.0.0",
    "jsonresume-theme-stackoverflow-fr": "^2.2.1",
    "katex": "^0.16.4",
    "puppeteer": "^22.0.0",
    "remark-directive": "^3.0.0"
  }
}
