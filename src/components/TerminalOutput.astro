---
const htmlContent = await Astro.slots
  .render('default')
  .then((result) => result.replace(/^\s*<p>((.|[\r\n])*)<\/p>\s*$/, '$1'));
---

<div class="rounded-md drop-shadow-sm tm-output" style="background-color: #282a36; color: var(--tw-prose-pre-code)">
  <div class="p-4 pb-1">
    <svg xmlns="http://www.w3.org/2000/svg" width="54" height="14" viewBox="0 0 54 14"
      ><g fill="none" fill-rule="evenodd" transform="translate(1 1)"
        ><circle cx="6" cy="6" r="6" fill="#FF5F56" stroke="#E0443E" stroke-width=".5"></circle><circle
          cx="26"
          cy="6"
          r="6"
          fill="#FFBD2E"
          stroke="#DEA123"
          stroke-width=".5"></circle><circle cx="46" cy="6" r="6" fill="#27C93F" stroke="#1AAB29" stroke-width=".5"
        ></circle></g
      ></svg
    >
  </div>
  {
    htmlContent.startsWith('<pre') ? (
      <Fragment set:html={htmlContent} />
    ) : (
      <pre class="mt-0" style="background-color: #282a36; color: var(--tw-prose-pre-code)" set:html={htmlContent} />
    )
  }
</div>
